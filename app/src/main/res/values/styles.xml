<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextColor">@color/md_white_1000</item>
        <item name="android:displayOptions">homeAsUp|showHome</item>
        <item name="android:navigationIcon">@drawable/ic_arrow_back_24dp</item>
    </style>

    <style name="TextAppearanceCollapsingToolbarExpanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
